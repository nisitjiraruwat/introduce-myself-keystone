datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Resume {
  id               String       @id @default(uuid()) @postgresql.Uuid
  email            String       @unique @default("")
  phone            String       @default("")
  address          String       @default("")
  educations       Education[]  @relation("Education_resume")
  additionalSkills Json?
  experiences      Experience[] @relation("Experience_resume")
}

model Education {
  id         String  @id @default(uuid()) @postgresql.Uuid
  resume     Resume? @relation("Education_resume", fields: [resumeId], references: [id])
  resumeId   String? @map("resume") @postgresql.Uuid
  name       String  @default("")
  level      String  @default("")
  graduation String  @default("")

  @@index([resumeId])
}

model Experience {
  id       String    @id @default(uuid()) @postgresql.Uuid
  resume   Resume?   @relation("Experience_resume", fields: [resumeId], references: [id])
  resumeId String?   @map("resume") @postgresql.Uuid
  position String    @default("")
  company  String    @default("")
  address  String    @default("")
  fromDate DateTime?
  toDate   DateTime?
  works    Json?

  @@index([resumeId])
}